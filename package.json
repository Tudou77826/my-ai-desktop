{
  "name": "claude-config-manager",
  "version": "0.1.0",
  "description": "ClaudeCode Config Manager - A lightweight desktop application for managing Claude Code configurations",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:all": "npm run server & npm run dev",
    "server": "tsx server/index.ts",
    "server:ts-node": "ts-node --esm --experimental-specifier-resolution=node --transpile-only server/index.ts",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,css,md}\"",
    "neu:run": "neu run",
    "neu:build": "npm run build && neu build",
    "neu:release": "neu release"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "clsx": "^2.0.0",
    "cors": "^2.8.6",
    "date-fns": "^2.30.0",
    "express": "^5.2.1",
    "i18next": "^25.8.4",
    "js-yaml": "^4.1.1",
    "lucide-react": "^0.294.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^16.5.4",
    "recharts": "^3.7.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@neutralinojs/neu": "^11.2.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.33",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.3.6",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
